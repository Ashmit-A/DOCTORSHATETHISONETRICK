PGURL=postgresql://username:password@host:port/database

# JWT Configuration
# Secret key for JWT token signing (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
# Port number for the server to run on
PORT=3000

# Environment
# Set to 'production' for production deployment
NODE_ENV=development

# Arcjet Configuration
# Rate limiting and security service API key
ARCJET_KEY=your-arcjet-api-key-here

# CORS Configuration (Optional - can be configured in constants.js)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# Cookie Configuration (Optional)
# Domain for cookies in production
COOKIE_DOMAIN=localhost

# Security Configuration (Optional)
# Enable HTTPS in production
SECURE_COOKIES=false

# Logging Configuration (Optional)
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Example values for development:
# PGURL=postgresql://user:pass@localhost:5432/stayconnect
# JWT_SECRET=my-super-secret-key-for-development-only
# PORT=3000
# NODE_ENV=development
# ARCJET_KEY=aj_development_key_here 